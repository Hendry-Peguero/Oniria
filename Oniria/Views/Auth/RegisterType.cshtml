@{
    Layout = "~/Views/Shared/Layouts/_OnlyBodyLayout.cshtml";
}
<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background: linear-gradient(rgba(181, 154, 196, 0.3), rgba(255, 192, 203, 0.3));
        background-size: cover;
        background-position: center;
        filter: saturate(1.2);
    }

    .balloon {
        position: absolute;
        width: 150px;
        height: 200px;
        left: 15%;
        top: 30%;
        z-index: 0;
        transition: transform 0.5s ease;
    }

        .balloon:hover {
            transform: translateY(-10px);
        }

    .balloon-top {
        width: 100%;
        height: 80%;
        background-color: #e091c8;
        border-radius: 50% 50% 20% 20%;
        position: relative;
        transition: background-color 0.3s ease;
        overflow: hidden;
    }

    .balloon:hover .balloon-top {
        background-color: #d670bc;
    }

    .balloon-lines {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-around;
    }

    .line {
        width: 3px;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.3);
        border-radius: 5px;
    }

    .balloon-basket {
        width: 30%;
        height: 15%;
        background-color: #8B4513;
        margin: 0 auto;
        border-radius: 2px;
        position: relative;
        transition: background-color 0.3s ease;
    }

    .balloon:hover .balloon-basket {
        background-color: #a05826;
    }

    .balloon-strings {
        width: 60%;
        height: 12%;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .string {
        width: 1px;
        height: 100%;
        background-color: #444;
    }

    .card {
        background-color: white;
        width: 400px;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        z-index: 10;
        text-align: center;
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

    h1 {
        font-size: 22px;
        color: #333;
        margin-bottom: 10px;
        font-weight: 600;
        letter-spacing: 0.2px;
    }

    .signin-text {
        font-size: 14px;
        color: #666;
        margin-bottom: 25px;
        font-weight: 400;
    }

    .signin-link {
        color: #2563EB;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

        .signin-link:hover {
            color: #1d4ed8;
            text-decoration: underline;
        }

    .account-types {
        display: flex;
        justify-content: space-between;
        margin-bottom: 25px;
    }

    .account-option {
        width: 48%;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .account-option:not(.active){
            color: #7b7b7b !important;
        }

        .account-option:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .account-option.active {
            background-color: #2563EB;
            color: white;
            border-color: #2563EB;
        }

        .account-option:not(.active):hover {
            background-color: #f5f5f5;
            border-color: #d0d0d0;
        }

        .account-option.active:hover {
            background-color: #1d4ed8;
        }

    .icon {
        width: 40px;
        height: 40px;
        margin-bottom: 10px;
        transition: transform 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .account-option:hover .icon {
        transform: scale(1.1);
    }

    .icon svg {
        width: 24px;
        height: 24px;
    }

    .account-option:not(.active) .icon svg {
        stroke: #666;
        fill: none;
    }

    .account-option.active .icon svg {
        stroke: white;
        fill: none;
    }

    .option-name {
        font-size: 14px;
        font-weight: 500;
    }

    .terms-text {
        font-size: 12px;
        color: #666;
        font-weight: 300;
    }

    .terms-link {
        color: #2563EB;
        text-decoration: none;
        transition: color 0.3s ease;
        font-size: inherit;
    }

        .terms-link:hover {
            color: #1d4ed8;
            text-decoration: underline;
        }

    /* Clouds effect */
    .clouds {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 40%;
        background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%);
        z-index: -1;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="background-image"></div>

    <!-- Balloon -->
    <div class="balloon">
        <div class="balloon-top">
            <div class="balloon-lines">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
        </div>
        <div class="balloon-strings">
            <div class="string"></div>
            <div class="string"></div>
            <div class="string"></div>
        </div>
        <div class="balloon-basket"></div>
    </div>

    <!-- Clouds -->
    <div class="clouds"></div>

    <!-- Card -->
    <div class="card">
        <h1>Choose Type Account</h1>
        <p class="signin-text">Have an account? <a asp-controller="Auth" asp-action="Login" class="signin-link">Sign In</a></p>

        <div class="account-types">
            <a class="account-option" asp-controller="Auth" asp-action="RegisterOrganization">
                <div class="icon">
                    <svg viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                        <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                    </svg>
                </div>
                <span class="option-name">Organization</span>
            </a>
            <a class="account-option active" asp-controller="Auth" asp-action="RegisterPatient">
                <div class="icon">
                    <svg viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </div>
                <span class="option-name">Patient</span>
            </a>
        </div>

        <p class="terms-text">By creating account, you agree to our <a href="#" class="terms-link poppins-semibold">Terms of Service</a></p>
    </div>
</div>