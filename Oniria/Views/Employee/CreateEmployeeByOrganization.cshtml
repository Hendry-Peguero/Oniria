@model Oniria.ViewModels.Employee.CreateEmployeeByOrganizationViewModel

<style>
    /* Misma estructura de estilos que ya usas */
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px 15px;
    }

    .section {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid #eee;
    }

    .section-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 5px;
        color: #333;
    }

    .section-subtitle {
        font-size: 14px;
        color: #666;
        margin-bottom: 20px;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 13px;
    }

    .form-group {
        flex: 1;
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            color: #555;
            margin-bottom: 8px;
        }

    .required::after {
        content: " *";
        color: #e53935;
    }

    .form-group input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        outline: none;
        transition: border-color 0.3s;
        background-color: white;
    }

        .form-group input:focus {
            border-color: #4285f4;
            box-shadow: 0 0 0 2px rgba(66, 133, 244, 0.1);
        }

    .text-danger {
        color: #e53935;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .phone-input-container {
        position: relative;
        display: flex;
        align-items: center;
    }

    .phone-prefix {
        position: absolute;
        left: 15px;
        color: #555;
        font-size: 14px;
        pointer-events: none;
    }

    .phone-input {
        padding-left: 35px !important;
    }

    .create-btn {
        padding: 14px 20px;
        background-color: #2563EB;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .create-btn:hover {
            background-color: #1d4ed8;
        }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

<div class="container">
    <h1 class="mb-4">Create Employee</h1>

    <form asp-action="CreateEmployeeByOrganization" method="post">
        <div class="section">
            <h2 class="section-title">Employee Information</h2>
            <p class="section-subtitle">Basic personal details of the employee</p>

            <div class="d-flex justify-content-center mb-3">
                <div asp-validation-summary="ModelOnly" class="general-error"></div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Name" class="required">First Name</label>
                    <input asp-for="Name" placeholder="Enter first name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="required">Last Name</label>
                    <input asp-for="LastName" placeholder="Enter last name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Email" class="required">Email Address</label>
                    <input asp-for="Email" type="email" placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="required">Phone Number</label>
                    <div class="phone-input-container">
                        <span class="phone-prefix">+1</span>
                        <input asp-for="PhoneNumber" type="tel" class="phone-input" placeholder="(849) 586-9875" id="phone" oninput="this.value = this.value.replace(/[^0-9\(\)\-\s]/g, '')">
                        <i class="bi bi-info-circle-fill text-secondary ms-2"
                           tabindex="0"
                           data-bs-toggle="popover"
                           data-bs-trigger="hover focus"
                           data-bs-placement="right"
                           data-bs-content="El número de teléfono debe tener el formato: (849) 586-9875. Solo se aceptan los códigos de área 809, 829 y 849."
                           style="cursor: pointer;"></i>
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="BornDate" class="required">Birth Date</label>
                    <input asp-for="BornDate" type="date" id="birthday">
                    <span asp-validation-for="BornDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Dni" class="required">DNI</label>
                    <input asp-for="Dni" placeholder="Enter DNI" maxlength="11" oninput="this.value = this.value.replace(/[^0-9\(\)\-\s]/g, '')">
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="section">
            <h2 class="section-title">Account Information</h2>
            <p class="section-subtitle">Create credentials for the employee</p>

            <div class="form-group">
                <label asp-for="UserName" class="required">Username</label>
                <input asp-for="UserName" placeholder="Enter username">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password" class="required">Password</label>
                    <input asp-for="Password" type="password" placeholder="Enter password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="required">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="section">
            <h2 class="section-title">Address</h2>
            <p class="section-subtitle">Work or residential address of the employee</p>

            <div class="form-group">
                <label asp-for="Address" class="required">Address</label>
                <input asp-for="Address" placeholder="Enter address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" asp-for="OrganizationId" />

        <div class="text-end mt-4">
            <button type="submit" class="create-btn" asp-controller="Employee" asp-action="CreateEmployeeByOrganization">
                Create Employee
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="popover"]').popover();

            // Add rule Validator
            $.validator.addMethod('dateInPast', function(value, element) {
                if (!value) return true; // Si está vacío, la regla NotEmpty se encargará

                var today = new Date();
                today.setHours(0, 0, 0, 0); // Establecer hora a 00:00:00 para comparar solo fechas
                var inputDate = new Date(value);

                return inputDate < today;
            }, 'Birthdate must be in the past');

            // Ponerselo a borndate
            $('#birthday').rules('add', {
                dateInPast: true
            });

            // Phone number input mask (US format)
            const phoneInput = document.getElementById('phone');

            phoneInput.addEventListener('input', function(e) {
                // Get only digits from the input
                let input = this.value.replace(/\D/g, '');

                // Limit to 10 digits (area code + phone number)
                if (input.length > 10) {
                    input = input.substring(0, 10);
                }

                // Format the phone number
                if (input.length > 0) {
                    // Format: (XXX) XXX-XXXX
                    if (input.length <= 3) {
                        this.value = '(' + input;
                    } else if (input.length <= 6) {
                        this.value = '(' + input.substring(0, 3) + ') ' + input.substring(3);
                    } else {
                        this.value = '(' + input.substring(0, 3) + ') ' + input.substring(3, 6) + '-' + input.substring(6);
                    }
                }
            });
        });
    </script>
}
