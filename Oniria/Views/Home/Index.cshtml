        }

        .hero p {
            font-size: 18px;
            opacity: 0.9;
            margin-bottom: 32px;
        }

    /* About section */
    .about {
        text-align: center;
        padding: 40px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .about h2 {
            font-size: 24px;
            font-weight: 700;
            color: #525252;
        }

        .about hr {
            margin-bottom: 32px;
            width: 50px;
            height: 2px;
            margin-top: 0;
            color: #608DFF;
        }

    .about-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1000px;
        margin: 0 auto;
    }

    .about-text {
        text-align: left;
        flex: 1;
    }

        .about-text h3 {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 16px;
            background: linear-gradient(90deg, #4361EE, #FF5E78);
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .about-text p {
            font-size: 16px;
            color: #555;
            margin-bottom: 24px;
        }

    .about-image {
        flex: 1;
        display: flex;
        justify-content: center;
    }

    .cloud-image {
        max-width: 100%;
        height: auto;
    }

    /* Services section */
    .services {
        padding: 40px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .services h2 {
            font-size: 24px;
            font-weight: 700;
            color: #525252;
        }

        .services hr {
            margin-bottom: 32px;
            width: 50px;
            height: 2px;
            margin-top: 0;
            color: #608DFF;
        }

    /* Card Styles with Wave Animation */
    .cards-container {
        display: flex;
        justify-content: center;
        gap: 48px;
        flex-wrap: wrap;
        margin: 50px auto;
        max-width: 1000px;
    }

    .e-card {
        background: transparent;
        box-shadow: 0px 8px 28px -9px rgba(0,0,0,0.45);
        position: relative;
        width: 240px;
        height: 330px;
        border-radius: 16px;
        overflow: hidden;
        margin: 20px 0;
    }

    .wave {
        position: absolute;
        width: 540px;
        height: 700px;
        opacity: 0.6;
        left: 0;
        top: 0;
        margin-left: -50%;
        margin-top: -70%;
    }

    .purple-card .wave {
        background: linear-gradient(744deg, #8A2BE2, #6A5ACD 60%, #7B68EE);
    }

    .red-card .wave {
        background: linear-gradient(744deg, #FF5E78, #FF3547 60%, #FF4757);
    }

    .blue-card .wave {
        background: linear-gradient(744deg, #00C6FB, #005BEA 60%, #4361EE);
    }

    .orange-card .wave {
        background: linear-gradient(744deg, #FFA500, #FF7800 60%, #FF8C00);
    }

    .icon {
        width: 3em;
        margin-top: -1em;
        padding-bottom: 1em;
    }

    .infotop {
        text-align: center;
        font-size: 20px;
        position: absolute;
        top: 5.6em;
        left: 0;
        right: 0;
        color: rgb(255, 255, 255);
        font-weight: 600;
    }

    .name {
        font-size: 14px;
        font-weight: 100;
        position: relative;
        top: 1em;
        text-transform: lowercase;
    }

    .wave:nth-child(2),
    .wave:nth-child(3) {
        top: 210px;
    }

    .playing .wave {
        border-radius: 40%;
        animation: wave 3000ms infinite linear;
    }

    .wave {
        border-radius: 40%;
        animation: wave 55s infinite linear;
    }

    .playing .wave:nth-child(2) {
        animation-duration: 4000ms;
    }

    .wave:nth-child(2) {
        animation-duration: 50s;
    }

    .playing .wave:nth-child(3) {
        animation-duration: 5000ms;
    }

    .wave:nth-child(3) {
        animation-duration: 45s;
    }

    @@keyframes wave {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    /* Features section */
    .features {
        padding: 40px 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature {
        margin-bottom: 64px;
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
        display: flex;
        
    }

    .feature-header {
        display: flex;
        align-items: center;
        padding: 24px;
        padding-bottom: 0;
    }

    .feature-marker {
        width: 4px;
        height: 24px;
        background: linear-gradient(to bottom, #8A2BE2, #4361EE);
        margin-right: 16px;
        border-radius: 2px;
    }

    .feature-header h2 {
        font-size: 20px;
        font-weight: 600;
        color: #333;
    }

    .feature-content {
        display: flex;
        flex-direction: column;
        width: 65%;
        padding: 25px 15px;
    }

    .feature-text {
        flex: 1;
        padding: 24px;
        padding-bottom: 40px;
        text-align: justify;
    }

        .feature-text p {
            font-size: 15px;
            line-height: 1.6;
            color: #555;
            margin-bottom: 24px;
        }

            .feature-text p:last-child {
                margin-bottom: 0;
            }

    .feature-image {
        width: 50%;
        overflow: hidden;
    }

        .feature-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .about-content, .feature-content {
            flex-direction: column;
        }

        .feature-image {
            width: 100%;
        }

        .hero {
            max-width: 90%;
        }

        .cards-container {
            flex-direction: column;
            align-items: center;
        }
    }
</style>
